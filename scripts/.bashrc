#!/bin/bash

# settings for LS_COLORS

LS_COLORS="di=34;1;40:ln=35;40:so=32;40:pi=33;40:ex=32;1;40:bd=34;46:cd=34;43:su=0;41:sg=0;46:tw=0;42:ow=0;43:"
export LS_COLORS

# settings for PS1

function parse_git_branch {
   git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}

PS1_COLOR_BLACK="\033[0;30m\]"
PS1_COLOR_BLUE="\033[0;34m\]"
PS1_COLOR_GREEN="\033[0;32m\]"
PS1_COLOR_CYAN="\033[0;36m\]"
PS1_COLOR_RED="\033[0;31m\]"
PS1_COLOR_PURPLE="\033[0;35m\]"
PS1_COLOR_BROWN="\033[0;33m\]"
PS1_COLOR_GREY="\033[0;37m\]"
PS1_COLOR_DARK_GREY="\033[1;30m\]"
PS1_COLOR_LIGHT_BLUE="\033[1;34m\]"
PS1_COLOR_LIGHT_GREEN="\033[1;32m\]"
PS1_COLOR_LIGHT_CYAN="\033[1;36m\]"
PS1_COLOR_LIGHT_RED="\033[1;31m\]"
PS1_COLOR_LIGHT_PURPLE="\033[1;35m\]"
PS1_COLOR_YELLOW="\033[1;33m\]"
PS1_COLOR_WHITE="\033[1;37m\]"
PS1_COLOE_END="\[\033[0m\]"

PS1_USERNAME="$PS1_COLOR_LIGHT_PURPLE\u$PS1_COLOE_END"
PS1_TIME="$PS1_COLOR_GREY\t$PS1_COLOE_END"
PS1_PATH="$PS1_COLOR_DARK_GREY\w$PS1_COLOE_END"
PS1_HOST="$PS1_COLOR_LIGHT_CYAN\h$PS1_COLOE_END"
PS1_GIT="$PS1_COLOR_LIGHT_RED\$(parse_git_branch)$PS1_COLOE_END"
PS1="$PS1_TIME [$PS1_USERNAME@$PS1_HOST $PS1_PATH] $PS1_GIT \n$ "
